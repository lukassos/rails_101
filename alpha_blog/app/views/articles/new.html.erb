<h1>Create an Article</h1>

<% if @article.errors.any? %>
  <h2>Error ocurred:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end%>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %><br/>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %><br/>
  </p>
  <p>
    <%= f.submit %><br/>
  </p>
<% end %>
